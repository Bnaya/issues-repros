{
  "name": "foo",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@types/jest": "^21.1.3",
    "jest": "^21.2.1",
    "ts-jest": "^21.1.2",
    "typescript": "^2.5.3"
  },
  "scripts": {
    "test": "jest"
  },
  "jest": {
    "verbose": true,
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.test.json"
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coverageReporters": [
      "html",
      "lcov"
    ],
    "mapCoverage": true
  }
}
